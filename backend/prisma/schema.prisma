generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  firstName     String    @map("first_name")
  lastName      String    @map("last_name")
  displayName   String?   @map("display_name")
  role          UserRole  @default(USER)
  emailVerified Boolean   @default(false) @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  tributes     Tribute[]
  partnerUsers PartnerUser[]

  @@map("users")
}

enum UserRole {
  USER
  PARTNER
  ADMIN
}

// ============================================
// PARTNERS (Funeral Homes, Churches)
// ============================================

model Partner {
  id           String        @id @default(cuid())
  name         String
  slug         String        @unique
  type         PartnerType
  contactEmail String        @map("contact_email")
  logoUrl      String?       @map("logo_url")
  verified     Boolean       @default(false)
  status       PartnerStatus @default(PENDING)
  rejectedReason String?     @map("rejected_reason")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  // Relations
  users    PartnerUser[]
  profiles Profile[]

  @@map("partners")
}

enum PartnerStatus {
  PENDING   // Waiting for admin approval
  APPROVED  // Active partner
  REJECTED  // Request denied
}

enum PartnerType {
  FUNERAL_HOME
  CHURCH
  HOSPITAL
  OTHER
}

model PartnerUser {
  id        String      @id @default(cuid())
  userId    String      @map("user_id")
  partnerId String      @map("partner_id")
  role      PartnerRole @default(MEMBER)
  createdAt DateTime    @default(now()) @map("created_at")

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  partner Partner @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  @@unique([userId, partnerId])
  @@map("partner_users")
}

enum PartnerRole {
  OWNER
  ADMIN
  MEMBER
}

// ============================================
// PROFILES (Memorial Pages)
// ============================================

model Profile {
  id   String @id @default(cuid())
  slug String @unique

  // Identity
  firstName       String   @map("first_name")
  lastName        String   @map("last_name")
  birthDate       DateTime? @map("birth_date") @db.Date
  deathDate       DateTime  @map("death_date") @db.Date
  sex             Sex?

  // Location (COG = Code Officiel GÃ©ographique)
  birthPlaceCog   String?  @map("birth_place_cog")
  birthPlaceLabel String?  @map("birth_place_label")
  deathPlaceCog   String?  @map("death_place_cog")
  deathPlaceLabel String?  @map("death_place_label")

  // Map pin coordinates (persisted, never auto-moved)
  pinLat Float? @map("pin_lat")
  pinLng Float? @map("pin_lng")

  // Data provenance
  source       ProfileSource
  inseeNumActe String?       @map("insee_num_acte")

  // Partner relation (nullable for INSEE-only profiles)
  partnerId String?  @map("partner_id")
  partner   Partner? @relation(fields: [partnerId], references: [id], onDelete: SetNull)

  // Content
  photoUrl       String? @map("photo_url")
  obituary       String? @db.Text
  serviceDetails Json?   @map("service_details")

  // State
  isLocked   Boolean   @default(false) @map("is_locked")
  lockedAt   DateTime? @map("locked_at")
  suppressed Boolean   @default(false)

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  tributes Tribute[]
  viewLogs ProfileViewLog[]

  // Indexes for performance
  @@index([deathDate])
  @@index([deathPlaceCog])
  @@index([lastName, firstName])
  @@index([partnerId])
  @@index([source])
  @@map("profiles")
}

enum Sex {
  MALE
  FEMALE
}

enum ProfileSource {
  PARTNER
  INSEE
  MERGED
}

// ============================================
// TRIBUTES (Prayers, Messages)
// ============================================

model Tribute {
  id        String        @id @default(cuid())
  profileId String        @map("profile_id")
  authorId  String        @map("author_id")
  content   String        @db.Text
  status    TributeStatus @default(PENDING)

  // Moderation
  moderatedBy String?   @map("moderated_by")
  moderatedAt DateTime? @map("moderated_at")

  // Timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  author  User    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([profileId, status])
  @@index([authorId])
  @@index([createdAt])
  @@map("tributes")
}

enum TributeStatus {
  PENDING
  APPROVED
  HIDDEN
  REMOVED
}

// ============================================
// INSEE IMPORT & DE-DUPLICATION
// ============================================

model InseeImportJob {
  id             String    @id @default(cuid())
  fileName       String    @map("file_name")
  fileMonth      String    @map("file_month") // "2025-11"
  recordCount    Int       @map("record_count")
  processedCount Int       @default(0) @map("processed_count")
  newProfiles    Int       @default(0) @map("new_profiles")
  mergedProfiles Int       @default(0) @map("merged_profiles")
  dedupPending   Int       @default(0) @map("dedup_pending")
  status         JobStatus
  errorMessage   String?   @map("error_message") @db.Text
  startedAt      DateTime  @map("started_at")
  completedAt    DateTime? @map("completed_at")

  @@index([status])
  @@index([fileMonth])
  @@map("insee_import_jobs")
}

enum JobStatus {
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model DedupCandidate {
  id             String       @id @default(cuid())
  inseeRecord    Json         @map("insee_record")
  candidateIds   String[]     @map("candidate_ids")
  matchScores    Json         @map("match_scores")
  status         DedupStatus  @default(PENDING)
  resolvedAction DedupAction? @map("resolved_action")
  resolvedBy     String?      @map("resolved_by")
  resolvedAt     DateTime?    @map("resolved_at")
  createdAt      DateTime     @default(now()) @map("created_at")

  @@index([status])
  @@map("dedup_candidates")
}

enum DedupStatus {
  PENDING
  RESOLVED
  SKIPPED
}

enum DedupAction {
  MERGED
  CREATED_NEW
  DISCARDED
}

// ============================================
// GEOCODING CACHE
// ============================================

model GeocodingCache {
  cogCode   String   @id @map("cog_code")
  lat       Float
  lng       Float
  label     String
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("geocoding_cache")
}

// ============================================
// ANALYTICS & AUDIT
// ============================================

model ProfileViewLog {
  id        String   @id @default(cuid())
  profileId String   @map("profile_id")
  viewerId  String?  @map("viewer_id")
  sessionId String   @map("session_id")
  ipHash    String   @map("ip_hash")
  userAgent String   @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, createdAt])
  @@index([viewerId])
  @@map("profile_view_logs")
}
